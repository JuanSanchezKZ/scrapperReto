{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/database/**/*"]
}
